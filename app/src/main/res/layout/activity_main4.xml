<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF9F9"
    tools:context=".MainActivity4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:onClick="cart"
                app:srcCompat="@drawable/kart"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:layout_weight="1"
                android:src="@drawable/ic_react_native_firebase_1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="REACT"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="90dp"
                android:layout_weight="1"
                android:onClick="user"
                app:srcCompat="@drawable/user" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginLeft="144dp"
                android:textStyle="bold"
                android:text="CART" />

            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#EDEDED">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/shoes" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Soon to be Delivered"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="120dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"

                    android:textSize="20sp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#EDEDED">

                <ImageView
                    android:id="@+id/imageView9f"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/shoes" />

                <TextView
                    android:id="@+id/textView7f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Soon to be Delivered"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="120dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"

                    android:textSize="20sp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textFView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_marginLeft="124dp"
                android:textStyle="bold"
                android:text="PAYMENT" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/credit" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>